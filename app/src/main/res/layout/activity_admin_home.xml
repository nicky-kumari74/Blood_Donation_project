<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/home"
    tools:context=".AdminHomeActivity">

        <TextView
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/trebuc"
            android:text="Admin\nDashboard"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/donor_request"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:layout_marginStart="30dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donor Requests"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#720784"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/update_blood"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Blood Groop"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#720784"
                android:textStyle="bold"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/need_blood"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Requests"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#720784"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
