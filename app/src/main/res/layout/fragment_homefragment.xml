<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="800dp"
    android:background="#F177A1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragment">
    <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@drawable/roundback"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/blood"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="“Donate Blood and Experience the Joy of Saving lives”"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/trebuc"
            android:textColor="#E91E63"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/donor"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Donate Blood"
                android:layout_marginTop="110dp"
                android:layout_marginStart="20dp"
                android:textColor="#EC0956"
                android:textStyle="bold"
                android:fontFamily="@font/trebuc"/>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/c3"
            android:layout_width="130dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/sb"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Blood available"
                android:layout_marginTop="110dp"
                android:layout_marginStart="20dp"
                android:textColor="#E40651"
                android:textStyle="bold"
                android:fontFamily="@font/trebuc"/>

        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/c4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="100dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/img3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/need"/>
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Need Blood Requests"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:textColor="#E40651"
                android:textStyle="bold"
                android:fontFamily="@font/trebuc"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>