<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EA5F8E"
    tools:context=".bloodavailable">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="7dp"
        android:background="@drawable/roundback">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/blood"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>
        <TextView
            android:id="@+id/avl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:text="Blood"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/trebuc"
            android:textColor="@color/black">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:text="Blood Group"
                android:textSize="22dp"
                android:fontFamily="@font/trebuc"
                android:textColor="#E50A55">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Blood Units"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:textSize="22dp"
                android:fontFamily="@font/trebuc"
                android:textColor="#E50A55">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="A+"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/a_plus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="A-"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/a_min"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="AB+"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/b_plus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="AB-"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/b_min"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="B+"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/ab_plus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="B-"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/ab_min"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="O+"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/o_plus"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:text="O-"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
            <TextView
                android:id="@+id/o_min"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="5"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:textSize="20dp"
                android:fontFamily="@font/trebuc"
                android:textColor="@color/black">
            </TextView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>